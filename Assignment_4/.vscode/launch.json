{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "internalConsoleOptions": "neverOpen",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "logging": {
                "engineLogging": false,
                "trace": false,
                "exceptions": false,
                "moduleLoad": false,
                "programOutput": false
            },
            "setupCommands": [
                {
                    "description": "Disable logging",
                    "text": "-gdb-set logging off",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}